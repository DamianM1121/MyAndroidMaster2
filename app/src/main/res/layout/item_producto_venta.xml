<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:backgroundTint="#DDDDDD"
            android:src="@drawable/ic_insert_image"
            android:layout_gravity="center" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/item_producto_venta_nombre_producto"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Precio del producto -->
        <TextView
            android:id="@+id/tvPrecioProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/item_producto_venta_precio_producto"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="10sp"
            android:gravity="center" />

        <!-- Cantidad disponible -->
        <TextView
            android:id="@+id/tvCantidadProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/item_producto_venta_cantidad"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
